#include <iostream>
using namespace std;

struct Node {
    int data;
    Node* next;
};

void splitList(Node* head, Node** head1_ref, Node** head2_ref) {
    Node *slow = head, *fast = head;

    // If there are less than 2 nodes
    if (head == NULL || head->next == head)
        return;

    // Move slow and fast pointers
    while (fast->next != head && fast->next->next != head) {
        fast = fast->next->next;
        slow = slow->next;
    }

    // For even number of nodes, move fast one more step
    if (fast->next->next == head)
        fast = fast->next;

    // Set the heads of the two halves
    *head1_ref = head;
    *head2_ref = slow->next;

    // Make the first half circular
    slow->next = *head1_ref;

    // Make the second half circular
    fast->next = *head2_ref;
}

// Utility function to print a circular linked list
void printList(Node* head) {
    Node* temp = head;
    if (head != NULL) {
        do {
            cout << temp->data << " ";
            temp = temp->next;
        } while (temp != head);
    }
    cout << endl;
}

// Helper to add nodes to the end of CLL
void push(Node** head_ref, int data) {
    Node* newNode = new Node();
    newNode->data = data;
    newNode->next = *head_ref;

    if (*head_ref != NULL) {
        Node* temp = *head_ref;
        while (temp->next != *head_ref)
            temp = temp->next;
        temp->next = newNode;
    } else {
        newNode->next = newNode;
        *head_ref = newNode;
    }
}

int main() {
    Node* head = NULL;
    Node* head1 = NULL;
    Node* head2 = NULL;

    push(&head, 50);
    push(&head, 40);
    push(&head, 30);
    push(&head, 20);
    push(&head, 10);

    splitList(head, &head1, &head2);

    cout << "First Circular Linked List: ";
    printList(head1);

    cout << "Second Circular Linked List: ";
    printList(head2);

    return 0;
}
